//Template Literals
//	- introduced on ES6 = new way to create strings in Js
//	- more powerful and flexible than normal strings
//	- using backticks
//	- `string value`

let names = "Siddhant Nagaria";
let msg = "Hello " + names;

let msg2 = `hello ${names}`
console.log(msg);
console.log(msg2);


